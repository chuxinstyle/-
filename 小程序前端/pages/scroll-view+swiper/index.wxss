/* pages/scroll-view+swiper/index.wxss */



.item {
  margin-bottom: 20rpx;
  width: 100%;
  height: 300rpx;
  line-height: 100rpx;
}
.tab-h {
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 100rpx;
  background: #f7f7f7;
  font-size: 16px;
  white-space: nowrap;
  position: absolute;
  top: 0;
  left: 0;
  
 
}

.tab{
  display: inline-block;
  width:200rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
   background: #f7f7f7;
}

.active {
  color: rgb(225,113,98);
  line-height: 100rpx;
  box-sizing: border-box;
  justify-content: space-between;
  border-bottom: 1rpx solid orangered;
}

.swiper {
  position: fixed;
  top: 100rpx;
  width: 100%;
  height: 91%;
  
}
.booklist {
  height: 25%;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #F0F0F0;
}

.book-icon-img {
  height: 100%;
  width: 300rpx;

}

.bookmessg {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.bookname {
  width: 100%;
  height: 150rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  font-size:52rpx;

}

.text {
  width: 100%;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: rgb(135,135,135);
  font-size: 35rpx;
  
}