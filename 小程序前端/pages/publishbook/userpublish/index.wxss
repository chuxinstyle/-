/* pages/publishbook/userpublish/index.wxss */
.image {
  width: 100%;
  height: 360rpx;
}
.page-body-info {
  display: flex;
  box-sizing: border-box;
  padding: 30rpx;
  height: 420rpx;
  border-top: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
  align-items: center;
  justify-content: center;
}
page {
  height: 100%;
  overflow: hidden;
}

.book-detail-header {
  padding-top: 20rpx;
  display: flex;
  align-items: center;
  flex-direction:row;
  height: 27%;
  box-sizing: border-box;
}

.book-detail-header .book-image {
  display: flex;
  width: 350rpx;
  height: 280rpx;
  margin-left: 20rpx;
  box-shadow: 2px 2px 2px rgb(200, 200, 200);
}

.book-detail-header .book-detail-author {
  display: flex;
  height: 100%;
  width: 100%;
  flex-direction:column;
  margin-left: 20rpx;
}

.book-detail-header .book-detail-author .title {
  width: 100%;
  height:45% ;
  display: block;
  color: rgb(61, 61, 61);
  font-size: 16px;
  margin-bottom: 50rpx;
border: 1rpx solid rgba(33, 21, 48, 0.562);
}

.book-detail-header .book-detail-author .author {
   width: 100%;
  height:25% ;
  display: block;
  color: rgb(116, 177, 187);
  font-size: 14px;
  margin-bottom: 25px;
  border: 1rpx solid rgba(33, 21, 48, 0.562);
}

.book-detail-header .book-detail-author .bookclass {
    height: 58rpx;
    width: 250rpx;
    border: 1rpx solid rgba(33, 21, 48, 0.562);
    text-align: center;
    background:#eee;
  }
  .book-detail-header .book-detail-author .select{
    background:#eee;
    height: 58rpx;
    width: 250rpx;
    text-align: center;
    border-bottom: 1rpx solid rgb(63, 16, 16);
  }



.book-summary {
  box-sizing: border-box;
  height:73%;
}

.book-summary .book-summary-header {
  color: rgb(61, 61, 61);
  font-weight: bold;
  font-size: 14px;
  padding: 40rpx 0 10rpx 20rpx;
  display: block;
  box-sizing: border-box;
  height: 15%;
}

.book-summary .book-summary-content {
  height: 75%;
  border-top: 1px solid rgb(200, 200, 200);
  border-bottom: 1px solid rgb(200, 200, 200);
  font-size: 12px;
  color: rgb(135, 135, 135);
  line-height: 50rpx;
  padding: 10rpx;
  text-indent: 10rpx;
  overflow: auto;
  box-sizing: border-box;
}

.publish {
  box-sizing: border-box;
  height: 10%;
  padding: 0;
  background-color: rgb(13, 118, 161);
  color: #fff;
  font-size: 18px;
  font-weight: bold;
  width: 100%;
  border-radius: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
