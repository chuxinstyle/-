/* pages/removepublish/index.wxss */
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.book-detail-header{
  padding-top: 20rpx;
  display: flex;
  align-items: center;
  flex-direction:row;
  height: 27%;
  width: 100%;
  box-sizing: border-box;
}
.book-detail-header .book-image{
  display: flex;
  width: 350rpx;
  height: 280rpx;
  margin-left: 20rpx;
  box-shadow: 2px 2px 2px rgb(200,200,200);
}
.book-detail-header .book-detail-author{
   height: 100%;
  width: 100%;
    display: flex;
  flex-direction:column;

  margin-left: 20rpx;
}
.book-detail-header .book-detail-author .title{
  width: 100%;
  
  color: rgb(61,61,61);
  font-size: 54rpx;
  margin-bottom: 50rpx;
  display: -webkit-box;
  overflow:hidden;
  text-overflow: ellipsis;
  word-break:break-all;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1;
}
.book-detail-header .book-detail-author .author{
  width: 100%;
 
  color: rgb(116,177,187);
  font-size: 14px;
  margin-bottom: 25px;
  display: -webkit-box;
  overflow:hidden;
  text-overflow: ellipsis;
  word-break:break-all;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1;
}
.book-detail-header .book-detail-author .rate{
  display: block;
  font-size: 12px;
}


.book-summary{
  box-sizing: border-box;
  height: 73%;
}
.book-summary .book-summary-header{
  color: rgb(61,61,61);
  font-weight: bold;
  font-size: 14px;
  padding: 40rpx 0 10rpx 20rpx;
  display: block;
  box-sizing: border-box;
  height: 10%;
}
.book-summary .book-summary-content{
  height: 82%;
  border-top: 1px solid rgb(200,200,200);
  border-bottom: 1px solid rgb(200,200,200);
  font-size: 12px;
  color: rgb(135,135,135);
  line-height: 50rpx;
  padding: 10rpx;
  text-indent:10rpx;
  overflow: auto;
    box-sizing: border-box;
}
.bollow{
  box-sizing: border-box;
  height: 10%;
  padding: 0;
  background-color:  rgb(13,118,161);
  color: #fff;
  font-size: 18px;
  font-weight: bold;
  width: 100%;
  border-radius: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}


